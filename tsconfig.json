{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "node"
    ],
    "paths": {
      "entities/*": [
        "entities/*"
      ],
      "@prisma/client": [
        "../prisma/client"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/client/**/*.ts"
  ],
  "exclude": [
    "node_modules",".next",".husky",
    "prisma/**"
  ]
}
